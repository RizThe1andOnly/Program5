<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BMIActivity">
    <RadioGroup
            android:layout_width="287dp"
            android:layout_height="31dp"
            android:orientation="horizontal" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp" android:id="@+id/unitsGroup" android:checkedButton="@id/englishUnits">
        <RadioButton
                android:text="lbs/inches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/englishUnits" android:layout_weight="1"
                android:fitsSystemWindows="false"/>
        <RadioButton
                android:text="kg/cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/metricUnits" android:layout_weight="1"/>
    </RadioGroup>
    <TableLayout
            android:layout_width="387dp"
            android:layout_height="141dp" app:layout_constraintTop_toBottomOf="@+id/unitsGroup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tableLayout">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/weightRow"
                  android:paddingVertical="15">
            <TextView
                    android:text="@string/WEIGHT_LABEL_FIELD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/weightNameLabel" android:textStyle="bold"
                    android:textSize="18sp"/>
            <EditText
                    android:layout_width="317dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/enterWeightField"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/heightRow">
            <TextView
                    android:text="@string/HEIGHT_LABEL_FIELD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/heightNameLabel" android:textStyle="bold"
                    android:textSize="18sp"/>
            <EditText
                    android:layout_width="317dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/enterHeightField"/>
        </TableRow>
    </TableLayout>
    <Button
            android:text="@string/BMI_LABEL_FIELD"
            android:layout_width="132dp"
            android:layout_height="50dp" android:id="@+id/calcBMIButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" android:layout_marginTop="92dp"/>
    <Button
            android:text="@string/GET_ADVICE_LABEL_FIELD"
            android:layout_width="126dp"
            android:layout_height="48dp" android:id="@+id/getAdviceButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintStart_toEndOf="@+id/calcBMIButton" app:layout_constraintHorizontal_bias="0.795"
            android:layout_marginTop="92dp"/>
    <TextView
            android:layout_width="349dp"
            android:layout_height="229dp" android:id="@+id/bmiView"
            app:layout_constraintTop_toBottomOf="@+id/calcBMIButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="36sp" android:textStyle="bold"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.548"
            app:layout_constraintVertical_bias="0.439"/>
</androidx.constraintlayout.widget.ConstraintLayout>